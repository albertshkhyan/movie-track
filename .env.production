# ────────────────────────────────────────────────
# Server Configuration
# ────────────────────────────────────────────────
API_PORT=80
BASE_URL=https://yourproductiondomain.com
NEXT_PUBLIC_API_URL=https://movie-track-seven.vercel.app  # Client-side URL access
VERCEL_URL=your-vercel-deployment-url  # Automatically set by Vercel in production

# ────────────────────────────────────────────────
# Database Configuration - Sensitive
# ────────────────────────────────────────────────
DB_HOST=prod-db-hostname
DB_PORT=5432
DB_USER=prod_db_user  # Replace with a secrets manager in production
DB_PASSWORD=prod_db_password  # Replace with a secrets manager in production
DB_NAME=prod_db_name

# ────────────────────────────────────────────────
# Logging and Environment
# ────────────────────────────────────────────────
LOG_LEVEL=error  # Log only errors in production for efficiency
NODE_ENV=production

# ────────────────────────────────────────────────
# Application Settings
# ────────────────────────────────────────────────
GENERATE_INITIAL_DATA=false  # Set to false to avoid data generation in production
CACHING=true  # Enable caching to improve performance
RATE_LIMIT=100  # Example rate limit to prevent abuse
API_TIMEOUT=5000  # Timeout in ms for API requests
