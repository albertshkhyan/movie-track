# ────────────────────────────────────────────────
# Server Configuration
# ────────────────────────────────────────────────
API_PORT=3007
BASE_URL=http://localhost:3007
NEXT_PUBLIC_API_URL=http://localhost:3007  # Client-side URL access for development
VERCEL_URL=  # Leave blank or set to Vercel URL if testing deployments

# ────────────────────────────────────────────────
# Database Configuration
# ────────────────────────────────────────────────
#DB_HOST=localhost
#DB_PORT=5432
#DB_USER=dev_db_user
#DB_PASSWORD=dev_db_password
#DB_NAME=dev_db_name

# ────────────────────────────────────────────────
# Logging and Environment
# ────────────────────────────────────────────────
LOG_LEVEL=debug  # Verbose logging for debugging
NODE_ENV=development

# ────────────────────────────────────────────────
# Application Settings
# ────────────────────────────────────────────────
GENERATE_INITIAL_DATA=true  # Populate initial data for testing

# ────────────────────────────────────────────────
# Testing and Debugging
# ────────────────────────────────────────────────
ENABLE_MOCKS=true  # Enable mock data for frontend/backend testing
RATE_LIMIT=0  # Disable rate limiting in development
API_TIMEOUT=10000  # Increase timeout for debugging purposes
